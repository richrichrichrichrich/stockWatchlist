@page "/watchlist"
@inject HttpClient Http

<h3>Stock Watchlist</h3>
<table class="table">
    <thead>
        <tr>
            <th>Ticker</th>
            <th>Buy Price</th>
            <th>Sell Price</th>
            <th>Expiry Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Watchlist)
        {
            <tr>
                <td>@stock.Ticker</td>
                <td>@stock.BuyPrice</td>
                <td>@stock.SellPrice</td>
                <td>@stock.ExpiryDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<WatchlistItem> Watchlist = new();

    protected override async Task OnInitializedAsync()
    {
        Watchlist = await Http.GetFromJsonAsync<List<WatchlistItem>>("/api/watchlist");
    }
}